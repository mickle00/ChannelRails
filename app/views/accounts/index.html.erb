<h1>Accounts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.Name, account_path(account) %></td>
        <td>
          <%= link_to 'Edit', edit_account_path(account), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', account_path(account), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New', new_account_path, :class => 'btn btn-primary' %>
