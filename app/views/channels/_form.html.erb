<%= form_for @channel, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Channel</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :number, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :number, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :hd, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :hd, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', channels_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
